---
import { DialogSearch } from '@/dialogs/DialogSearch'
import { IconFeatherSearch } from '@aracna/icons-feather-react/components/search'
import { joinElementClasses } from '@aracna/web'
---

<div
  class={joinElementClasses(
    'w-64 hidden xl:flex justify-between items-center px-3 py-2 rounded cursor-pointer border-2 border-slate-800 bg-black',
    'transition hover:border-slate-700'
  )}
  id='search-trigger'
>
  <div class='flex items-center gap-2'>
    <IconFeatherSearch client:load stroke='white' />
    <span class='text-slate-400'>Search</span>
  </div>
  <div class='flex justify-center items-center px-2 py-1 text-xs rounded border-2 border-slate-800'>CTRL + K</div>
</div>

<script>
  import { DialogController } from '@/controllers/dialog-controller'

  document.getElementById('search-trigger')?.addEventListener('click', () => DialogController.show('search'))
</script>
