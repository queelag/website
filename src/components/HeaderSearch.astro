---
import { ICON_F_SEARCH } from '@aracna-icons/feather'
import { jec } from '@aracna/web'
import { Chip } from './Chip'
import { DialogSearch } from '@/dialogs/DialogSearch'
import { IconFeather } from './IconFeather'
---

<IconFeather client:load className='lg:hidden' id='mobile-search-trigger' size={20} src={ICON_F_SEARCH} stroke='white' stroke-width='2' />
<div
  class={jec('w-64 hidden xl:flex justify-between items-center px-3 py-2 rounded cursor-pointer bg-slate-800', 'transition hover:ring-2 ring-slate-800')}
  id='desktop-search-trigger'
>
  <div class='flex items-center gap-3'>
    <IconFeather client:load src={ICON_F_SEARCH} stroke='white' />
    <span class='text-zinc-500'>Search</span>
  </div>
  <Chip client:load layer={1} text='CTRL + K' />
</div>
<DialogSearch client:only='react' />

<script>
  import { DialogController } from '@/controllers/dialog-controller'

  document.getElementById('desktop-search-trigger')?.addEventListener('click', () => DialogController.show('search'))
</script>
